<?xml version="1.0"?>
<configuration>
  <connectionStrings>
    <add name="HangmanConnectionString" connectionString="Data Source=DESKTOP-9KUT5CG\\SQLEXPRESS;Integrated Security=SSPI;Initial Catalog=Hangman"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <system.serviceModel>

    <services>
      <service name="HangmanServis.Hangman"
               behaviorConfiguration="HangmanServis.HangmanServisBehavior">

        <!-- Definisanje krajnje tačke (endpoint) za izlaganje metoda servisa dostupnih klijentima -->
        <endpoint address=""
                  binding="basicHttpBinding"
                  contract="HangmanServis.IHangman" />

        <!-- Definisanje krajnje tačke (endpoint) za izlaganje meta podataka koji sadrže
             konfiguracione parametre krajnje tačke za povezivanje sa klijentima -->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />

      </service>
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="HangmanServis.HangmanServisBehavior">

          <!-- Definisanje metadata behavior propertija servisa
               kako bi se omogućilo servisu da objavi i izloži svoje meta podatke -->
          <serviceMetadata />

        </behavior>
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
</configuration>
